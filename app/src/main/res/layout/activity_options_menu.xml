<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Options_menu">

    <TextView
        android:id="@+id/textaboutoptions"
        android:layout_width="162dp"
        android:layout_height="0dp"
        android:layout_marginBottom="203dp"
        android:gravity="center"
        android:text="Options List"
        android:textAlignment="gravity"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/cardviewaltin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewdoviz"
        android:layout_width="0dp"
        android:layout_height="91dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="50dp"
        android:clickable="true"
        android:onClick="todoviz_ekrani"
        app:cardCornerRadius="22dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toTopOf="@+id/cardviewaltin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="345dp"
            android:layout_height="81dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:textAlignment="center">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/exchange" />

            <View
                android:layout_width="5dp"
                android:layout_height="92dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="227dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="DÖVİZ"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold|italic" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewaltin"
        android:layout_width="343dp"
        android:layout_height="85dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="55dp"
        android:clickable="true"
        android:onClick="togold"
        app:cardCornerRadius="22dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toTopOf="@+id/cardviewmoney"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textaboutoptions">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/gold" />

            <View
                android:layout_width="5dp"
                android:layout_height="92dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="227dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="ALTIN"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold|italic" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewmoney"
        android:layout_width="343dp"
        android:layout_height="91dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="55dp"
        android:clickable="true"
        android:onClick="toBalance"
        app:cardCornerRadius="22dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardviewaltin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/salary" />

            <View
                android:layout_width="5dp"
                android:layout_height="92dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="223dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="BAKİYE SORGULA"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold|italic" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>